{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (debug)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build (release)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
        },
        {
            "label": "test stepper_servo_lib",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                "-p",
                "stepper_servo_lib",
                "--target",
                "x86_64-pc-windows-msvc",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test",
        },
        {
            "label": "copy_binary (debug)",
            "type": "shell",
            "command": "arm-none-eabi-objcopy",
            "args": [
                "--output-target",
                "binary",
                "./target/thumbv7m-none-eabi/debug/stepper_servo",
                "./target/thumbv7m-none-eabi/debug/stepper_servo.bin"
            ],
            "options": {
                "cwd": "${workspaceRoot}",
            },
            "problemMatcher": [],
            "dependsOn": "build (debug)"
        },
        {
            "label": "copy_binary (release)",
            "type": "shell",
            "command": "arm-none-eabi-objcopy",
            "args": [
                "--output-target",
                "binary",
                "./target/thumbv7m-none-eabi/release/stepper_servo",
                "./target/thumbv7m-none-eabi/release/stepper_servo.bin"
            ],
            "options": {
                "cwd": "${workspaceRoot}",
            },
            "problemMatcher": [],
            "dependsOn": "build (release)"
        },
        {
            "label": "load_firmware (debug)",
            "type": "shell",
            "command": "C:/Program Files (x86)/STMicroelectronics/STM32 ST-LINK Utility/ST-LINK Utility/ST-LINK_CLI.exe",
            "args": [
                "-c",
                "SWD",
                "-P",
                "./target/thumbv7m-none-eabi/debug/stepper_servo.bin",
                "0x08000000",
                "-rst"
            ],
            "options": {
                "cwd": "${workspaceRoot}",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": "copy_binary (debug)"
        },
        {
            "label": "load_firmware (release)",
            "type": "shell",
            "command": "C:/Program Files (x86)/STMicroelectronics/STM32 ST-LINK Utility/ST-LINK Utility/ST-LINK_CLI.exe",
            "args": [
                "-c",
                "SWD",
                "-P",
                "./target/thumbv7m-none-eabi/release/stepper_servo.bin",
                "0x08000000",
                "-rst"
            ],
            "options": {
                "cwd": "${workspaceRoot}",
            },
            "group": "build",
            "problemMatcher": [],
            "dependsOn": "copy_binary (release)"
        }
    ]
}